<% action = (user.persisted? ? user_url(user) : users_url) %>
<% method = (user.persisted? ? "put" : "post") %>
<% message = (user.persisted? ? "Update Account" : "Sign Up") %>

<div class="row">
  <div class = "col-xs-3 col-xs-offset-4">
    <form action="<%= action %>" method="post">
      <input
         name="_method"
         type="hidden"
         value="<%= method %>">
      <input
         name="authenticity_token"
         type="hidden"
         value="<%= form_authenticity_token %>">

      <div class="form-group">
        <label for="user_username">Username</label>
        <input
           id="user_username"
           name="user[username]"
           type="text"
           class="form-control">
         </div>
       
         <div class="form-group">
        <label for="user_password">Password</label>
        <input
           id="user_password"
           name="user[password]"
           type="password"
           class="form-control">
        </div>
  
        <button class="btn btn-primary" type="submit"><%= message %></button>
      </div>
    </form>
  </div>
</div>
